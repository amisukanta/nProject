
<div class="tabs_sukanta">
    <ul class="tab-links">
        <li class="active"><a href="#tab1">Company Files</a></li>
        <li><a href="#tab2">Project Files</a></li>
        
    </ul>
 
    <div class="tab-content">
        <div id="tab1" class="tab active">
          <%= render 'company_files' %>
          
        </div>
 
        <div id="tab2" class="tab">
          <%= render 'project_files' %> 
        </div>
 
        
    </div>
</div>

<script type="text/javascript">
  
  jQuery(document).ready(function() {
    jQuery('.tabs_sukanta .tab-links a').on('click', function(e)  {
        var currentAttrValue = jQuery(this).attr('href');
 
        // Show/Hide Tabs
        jQuery('.tabs_sukanta ' + currentAttrValue).show().siblings().hide();
 
        // Change/remove current tab to active
        jQuery(this).parent('li').addClass('active').siblings().removeClass('active');
 
        e.preventDefault();
    });
});

</script>




