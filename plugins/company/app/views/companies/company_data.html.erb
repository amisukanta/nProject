

<style type="text/css">
	.com-detail{
		width: 100%;
		margin: 0;
		float: left;
	}
	.company { 
  width: 50%; 
  border-collapse: collapse; 
  }
  .company td { 
  padding: 6px; 
  border: 1px solid #ccc; 
  text-align: left; 
  font-size: 12px;
}
.com-user li{
	list-style: none;
}
</style>
<h2> Company Details</h2>
<div class="com-detail">
	<table class="company">
		
		<tr>
			<td>Name</td>
			<td> <%= @company.name %></td>
		</tr> 
		<tr>
			<td>Email</td>
			<td><%= @company.email %></td>
		</tr>
		<tr>
			<td>Details</td>
			<td><%= @company.description %></td>
		</tr>
		<tr>
			<td>Company Logo</td>
			<td><%= image_tag @company.avatar_url(:thumb)%></td>
		</tr>
		
	</table>
<div class="new-button" style="float:left; margin-top:10px;"><%= link_to 'Edit', edit_company_path(@company) %> </div>